<div class="nested-fields border p-3 mb-3">
  <div class="form-group">
    <%= f.label :description, class: 'form-label' %>
    <%= f.text_field :description, class: 'form-control' %>
  </div>
  <div class="form-group form-check">
    <%= f.check_box :status, class: 'form-check-input' %>
    <%= f.label :status, "Status", class: 'form-check-label' %>
  </div>
  <%= link_to_remove_association (icon_solid {'fa-trash'} + 'Remover' ).html_safe, f, class: 'btn btn-sm btn-danger ml-1 mb-2' %>
</div>
