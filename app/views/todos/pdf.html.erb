<h1>Lista de Todos</h1>
  <table id="todos" class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>#</th>
        <th>Titulo</th>
        <th>Descrição</th>
        <th>Status</th>
        <th>Total de Items</th>
        <th>Criado em</th>
        <th>Atualizado em</th>
      </tr>
    </thead>
    <tbody>
      <% todos.each do |todo| %>
        <tr>
          <td><%= todo.id %></td>
          <td><%= todo.title %></td>
          <td><%= todo.description %></td>
          <td><%= todo.done ? 'Feito' : 'Esperando' %></td>
          <td><%= todo.items.size %></td>
          <td><%= todo.created_at.strftime("%d/%m/%Y") %></td>
          <td><%= todo.updated_at.strftime("%d/%m/%Y") %></td>
        </tr>
      <% end %>
    </tbody>
    <tfooter>
      <tr>
        <th>#</th>
        <th>Titulo</th>
        <th>Descrição</th>
        <th>Status</th>
        <th>Total de Items</th>
        <th>Criado em</th>
        <th>Atualizado em</th>
      </tr>
      <tr>
        <td colspan="2">Total de Registros</td>
        <td colspan="5"><%= todos.size %></td>
      </tr>
    </tfooter>
  </table>
