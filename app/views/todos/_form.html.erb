<%= form_with(model: todo, remote: true) do |form| %>
  <div id="todo_errors">
  </div>

  <div class="form-group">
    <%= form.label :title, class: 'form-label' %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :description, class: 'form-label' %>
    <%= form.text_field :description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :done, class: 'form-label' %>
    <%= form.check_box :done %>
  </div>

  <div id="items">
    <h4 id="items-count">Items: <%= form.object.items.size %></h4>
    <%= form.fields_for :items do |item| %>
      <%= render 'item_fields', f: item %>
    <% end %>
    <div class="row justify-content-end mr-2">
      <%= link_to_add_association form, :items, class: 'btn btn-sm btn-primary mb-2' do %>
        Adiciona Item <%= icon_solid { 'fa-plus' } %>
      <% end %>
    </div>
  </div>

  <div class="row justify-content-start">
    <%= form.submit nil, class: 'btn btn-sm btn-primary ml-3' %>
  </div>
<% end %>

<script type="text/javascript">
  App.Todo.cocoonItems();
</script>
